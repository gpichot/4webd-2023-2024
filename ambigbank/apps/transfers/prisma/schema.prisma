generator client {
  provider = "prisma-client-js"
  output   = "./node_modules/PrismaClient"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model MoneyTransfer {
  id String @id @default(uuid())

  amount    Decimal
  createdAt DateTime @default(now())

  fromAccountId String
  toAccountId   String
}
